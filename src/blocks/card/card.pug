+style('card', 'blocks')
+style('stats', 'blocks')
+style('price', 'blocks')

section.card.case
    .card__wrap.row
        .card__head.--hide
            .card__title.h2 Индонезия Фринса
            .card__btn-favorit.btn
                +img('heart.svg', 'icon')
                +img('heart-bg.svg', 'icon')
        .card__images
            .card__slider.swiper
                .card__slider-list.swiper-wrapper
                    .card__slider-item.swiper-slide
                        +img('product-1.png')
                    .card__slider-item.swiper-slide
                        +img('product-1.png')
                    .card__slider-item.swiper-slide
                        +img('product-1.png')
            .card__controls
                .card__control.control.--prev.swiper-button-prev
                    +img('chevron.svg')
                .card__dots.dots.swiper-pagination
                .card__control.control.--next.swiper-button-next
                    +img('chevron.svg')
        .card__content
            .card__head
                .card__title.h2 #[h1 Индонезия Фринса]
                .card__btn-favorit.btn
                    +img('heart.svg', 'icon')
                    +img('heart-bg.svg', 'icon')
            .card__vendor-code Артикул: 084
            .card__data
                .card__data-col
                    .card__stats.stats
                        .stats__list
                            .stats__item
                                .stats__name Кислотность
                                .stats__value #[div(style="width: 75%")]
                            .stats__item
                                .stats__name Сладость
                                .stats__value #[div(style="width: 95%")]
                            .stats__item
                                .stats__name Горечь
                                .stats__value #[div(style="width: 60%")]
                            .stats__item
                                .stats__name Обжарка 
                                .stats__desc Эспрессо
                    .card__settings
                        .card__select.select.--b-gray
                            select(name="grinding")
                                option(value="Не молоть" selected="selected") Не молоть
                                option(value="В зернах") В зернах
                        .card__incdec.incdec
                            .incdec__btn.btn.--minus
                            input.incdec__input(type="tel" name="")
                            .incdec__btn.btn.--plus
                    .card__price.price
                        .price__list
                            .price__item(data-price="3099")
                                .price__head
                                    .price__weight 200 г.
                                    .price__discount -40%
                                .price__body
                                    .price__value #[var 3099] ₽
                            .price__item(data-price="10099")
                                .price__head
                                    .price__weight 1 кг.
                                    .price__discount -40%
                                .price__body
                                    .price__value #[var 10099] ₽
                    a.card__btn-add.btn.--md.--bg-black.--round(href="javascript:;") В корзину
                .card__data-col
                    .card__desc
                        p Цветочный аромат и шелковистое тело отлично дополняет фруктовая кислотность, окрашенная сладостью спелой дыни и оттенками малинового варенья. В завершении Вас ждет нежное послевкусие черешни.
            
+script('card', 'blocks')