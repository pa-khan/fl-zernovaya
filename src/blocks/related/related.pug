+style('related', 'blocks')
+style('blog', 'blocks')
section.related.case
    .related__title.h2 #[h2 ]
    .related__list.row
        mixin blogItem(img = '')
            article.related__item.blog__item.bgw(class!=attributes.class)
                .blog__inner
                    .blog__data
                        .blog__data-item
                            .blog__data-icon
                                +img('calendar.svg')
                            .blog__data-value 31 мая 2022
                        .blog__data-item
                            .blog__data-icon
                                +img('clock.svg')
                            .blog__data-value 10 мин. на чтение
                        .blog__data-item
                            .blog__data-icon
                                +img('eye.svg')
                            .blog__data-value 158 просмотров
                    .blog__content
                        .blog__name.h4 #[a(href="article.html") Экспериментальные методы обработки кофе в Гватемале]
                        .blog__desc Одноствольная система выращивания кофе может изменить рынок
                .blog__bg.bg
                    +img(img)
        +blogItem('blog-1.jpg')
        +blogItem('blog-1.jpg')
        +blogItem('blog-1.jpg')