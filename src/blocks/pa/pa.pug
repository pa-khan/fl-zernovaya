+style('pa', 'blocks')

section.pa
    .pa__head.pa__case.case
        .pa__title.h2 #[h1 Личный кабинет]
        nav.pa__nav
            a.pa__nav-link(href="pa.html" class=paData ? '--current' : null) Личные данные
            a.pa__nav-link(href="orders.html" class=paOrders || paOrdersItem ? '--current' : null) Мои заказы
            a.pa__nav-link(href="addresses.html" class=paAddress ? '--current' : null) Адреса
            a.pa__nav-link(href="nots.html" class=paNots ? '--current' : null) Уведомления #[span 5]
            a.pa__nav-link(href="favorits.html" class=paFavorit ? '--current' : null) Избранное
    .pa__wrap.case
        if paData
            .pa__user
                +style('file', 'comp')
                .pa__user-avatar.file
                    input(type="file" name="avatar" id="file-1" accept="image/*")
                    label.file__wrap(for="file-1")
                        .file__img
                            +img('avatar.png')
                        .file__title Изменить фото профиля
                .pa__user-name.h3 Иван Иванов
                +script('file', 'comp')
            .pa__balance Баланс бонусов: #[var 450 USC]
            .pa__subtitle Редактировать данные
            .pa__form
                .pa__form-col
                    .pa__field.field.--md.--b-gray.--radius.--name.--required
                        .field__wrap
                            .field__placeholder ФИО
                            input.field__area(type="name" name="name")
                    .pa__field.field.--md.--b-gray.--radius.--phone.--required
                        .field__wrap
                            .field__placeholder Телефон
                            input.field__area(type="tel" name="phone")
                    .pa__field.field.--md.--b-gray.--radius.--email.--required
                        .field__wrap
                            .field__placeholder E-mail
                            input.field__area(type="email" name="email")
                    .pa__field.field.--md.--b-gray.--radius.--password.--required
                        .field__wrap
                            .field__placeholder Пароль
                            input.field__area(type="password" name="phone")

                .pa__form-col
                    .pa__field.field.--md.--b-gray.--radius.--required(data-min="5")
                        .field__wrap
                            .field__placeholder Полное наименование организации
                            input.field__area(type="text" name="org")
                    .pa__field.field.--md.--b-gray.--radius.--required(data-min="10")
                        .field__wrap
                            .field__placeholder Юр. адрес
                            input.field__area(type="text" name="ur")
                    .pa__field.field.--md.--b-gray.--radius.--required(data-min="10")
                        .field__wrap
                            .field__placeholder ИНН
                            input.field__area(type="tel" name="inn")
                    .pa__field.field.--md.--b-gray.--radius.--required(data-min="10")
                        .field__wrap
                            .field__placeholder КПП
                            input.field__area(type="tel" name="kpp")

                .pa__form-col
                    button.pa__btn.btn.--md.--bg-black.--round Сохранить

    if paOrders
        include ../orders/orders
        
    if paOrdersItem
        include ../orders-item/orders-item
    if paAddress
        include ../addresses/addresses
    if paNots
        include ../nots/nots
    if paFavorit
        include ../favorit/favorit